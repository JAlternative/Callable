<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Модуль Аналитика. Навигация" thread-count="3" parallel="classes">
    <listeners>
        <listener class-name="testng.retry.AnnotationTransformer"/>
    </listeners>
    <test name="Отображение данных">
        <groups>
            <run>
                <include name="A-1"/>
                <include name="A-5.2.[1, 2, 3]"/>
                <include name="ADP-1"/>
                <include name="ADP-2"/>
                <include name="A-3.1.2"/>
                <include name="A-3.1.3"/>
                <include name="A-3.1.4"/>
            </run>
        </groups>
        <classes>
            <class name="pagemodel.AnalyticsInt"/>
        </classes>
    </test>
    <test name="Скрытие столбцов, режим редактирования">
        <groups>
            <run>
                <include name="A-3.2.1"/>
                <include name="A-3.2.2"/>
                <include name="A-5.3.1.1"/>
                <include name="A-5.3.1.2"/>
                <include name="A-5.3.2.1"/>
                <include name="A-5.3.2.2"/>
                <include name="A-5.3.3.1"/>
            </run>
        </groups>
        <classes>
            <class name="pagemodel.AnalyticsInt"/>
        </classes>
    </test>
    <test name="Переключение временного периода">
        <groups>
            <run>
                <include name="A-5.4.2.1"/>
                <include name="A-5.4.3.1"/>
                <include name="A-5.4.1.2"/>
                <include name="A-5.4.2.2"/>
                <include name="A-5.4.2.3"/>
                <include name="A-5.4.2.4"/>
                <include name="A-5.4.3.2"/>
                <include name="A-5.4.3.3"/>
                <include name="A-5.4.3.4"/>
            </run>
        </groups>
        <classes>
            <class name="pagemodel.AnalyticsInt"/>
        </classes>
    </test>
</suite>